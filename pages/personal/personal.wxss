page{
  height: 100%;
  width: 100%;
  margin: 0rpx;
  padding: 0rpx;
}
#background{
  width: 100%;
  height: 100%;
}
#background_img{
  position: absolute;
  z-index: -1;
  width: 100%;
  height: 100%;
}
#information{
  width: 100%;
  height: 20%;
  display: flex;
}
#avatar{
  display: flex;
  height: 100%;
  width: 50%;
}
#name{
  height: 100%;
  width: 50%;
}
#avatar_img{
  align-self: center;
  margin: 0 auto;
  height: 80%;
  width: 80%;
  border-radius: 80%;
  overflow: hidden;
}
#name_details{
  height: 60%;
  width: 100%;
  position: relative;
  top: 40%;
}
#invitation{
  height: 50%;
  width: 100%;
  position: relative;
}
.function{
  width: 100%;
  height: 12%;
}
.function_button{
  text-align: center;
  border: 2rpx solid;
  border-color:wheat;
  position: relative;
  width: 80%;
  top: 30%;
  height: 40%;
  background-color:transparent;
  left: 10%;
}
#button_img{
  width: 100%;
  height: 20%;
}
#exit_button{
  position: relative;
  top: 10%;
  background-color: rgba(255,198,119,0.3);
  border:2rpx,solid;
  border-radius: 5%;
  border-color: transparent;
}