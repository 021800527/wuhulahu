page{
  height: 100%;
  width: 100%;
  margin: 0rpx;
  padding: 0rpx;
}
#background{
  width: 100%;
  height: 100%;
}
#background_img{
  position: absolute;
  z-index: -1;
  width: 100%;
  height: 100%;
}
#information{
  width: 100%;
  height: 20%;
  display: flex;
}
#avatar{
  display: flex;
  height: 100%;
  width: 50%;
}
#name{
  height: 100%;
  width: 50%;
}
#avatar_img{
  align-self: center;
  margin: 0 auto;
  height: 80%;
  width: 80%;
  border-radius: 80%;
  overflow: hidden;
}
#name_details{
  height: 60%;
  width: 100%;
  position: relative;
  top: 40%;
}
#invitation{
  height: 50%;
  width: 100%;
  position: relative;
}
.function{
  width: 100%;
  height: 10%;
}
.function_button{
  width: 100%;
  height: 80%;
  background-color: white;
}